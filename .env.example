# Loyverse Automation API Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3000

# 2captcha Configuration (for CAPTCHA handling)
CAPTCHA_API_KEY=e4d9356708aae1a75325447c995c1833
CAPTCHA_TIMEOUT=120000
CAPTCHA_POLLING_INTERVAL=5000
CAPTCHA_MAX_RETRIES=3

# Loyverse Credentials (optional - can be hardcoded in config)
LOYVERSE_USERNAME=your_username
LOYVERSE_PASSWORD=your_password

# Webhook Configuration
N8N_WEBHOOK_URL=http://localhost:5678/webhook/eb25f31a-326c-4434-a327-eadd26183b51
WEBHOOK_ENABLED=true
WEBHOOK_TIMEOUT=10000
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=2000

# Browser Configuration
PUPPETEER_HEADLESS=false
FORCE_HEADLESS=false
DOWNLOAD_TIMEOUT=30000
NAVIGATION_TIMEOUT=30000
REQUEST_TIMEOUT=60000
MAX_RETRIES=3
RETRY_DELAY=5000

# Display Configuration (for VPS deployment)
DISPLAY=:1

# File Paths
DOWNLOAD_PATH=downloads
PROCESSING_PATH=processing
USER_DATA_DIR=chrome-user-data

# Security Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=false
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
REQUEST_SIZE_LIMIT=10mb

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Production Settings (uncomment for VPS deployment)
# NODE_ENV=production
# PUPPETEER_HEADLESS=new
# FORCE_HEADLESS=true